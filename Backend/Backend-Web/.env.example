# ===== NAGA STALL MANAGEMENT SYSTEM - UNIFIED BACKEND ENVIRONMENT =====
# Environment configuration for the unified backend server

# ===== SERVER CONFIGURATION =====
NODE_ENV=development
PORT=5000

# ===== DATABASE CONFIGURATION =====
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=stall_management_system

# ===== JWT CONFIGURATION =====
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_refresh_token_secret_here
JWT_REFRESH_EXPIRES_IN=7d

# ===== EMAIL CONFIGURATION =====
# For applicant notifications and communications
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here
EMAIL_FROM="Naga Stall Management <noreply@nagastall.com>"

# ===== CORS CONFIGURATION =====
# Frontend URLs that are allowed to access the API
FRONTEND_URL=http://localhost:3000
LANDING_PAGE_URL=http://localhost:3001
ADMIN_PANEL_URL=http://localhost:3002
MOBILE_APP_URL=http://localhost:3003

# ===== FILE UPLOAD CONFIGURATION =====
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# ===== SECURITY CONFIGURATION =====
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===== API CONFIGURATION =====
API_VERSION=v1
API_PREFIX=/api

# ===== LOGGING CONFIGURATION =====
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# ===== SESSION CONFIGURATION =====
SESSION_SECRET=your_session_secret_here
SESSION_TIMEOUT=86400000

# ===== MOBILE APP SPECIFIC =====
MOBILE_API_VERSION=v1
MOBILE_JWT_EXPIRES_IN=30d

# ===== DEVELOPMENT FLAGS =====
DEBUG_MODE=true
VERBOSE_LOGGING=true
ENABLE_SWAGGER=true